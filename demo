  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    const swiper = new Swiper('.swiper-container', {
      slidesPerView: 3,
      spaceBetween: 20,
      autoplay: { delay: 3000 },
      loop: true,
    });

    function showDetail(type){
      document.getElementById('list-page').classList.add('hidden');
      document.getElementById('detail-page').classList.remove('hidden');
      document.getElementById('checkout-page').classList.add('hidden');
      document.getElementById('complete-page').classList.add('hidden');
      if(type==='icebreak'){
        document.getElementById('detail-title').innerText = '初対面アイスブレイク話';
        document.getElementById('detail-author').innerText = '投稿者：たけし';
        document.getElementById('detail-tags').innerHTML = '<span class="bg-gray-200 px-2 py-1 text-xs rounded">#合コン</span><span class="bg-gray-200 px-2 py-1 text-xs rounded">#クリーン</span>';
        document.getElementById('detail-desc').innerText = '合コンの場で緊張した空気を一気に和ませる小ネタ。';
        document.getElementById('detail-price').innerText = '¥30,000（独占） / ¥12,000（6か月独占）';
        document.getElementById('checkout-item').innerText = '初対面アイスブレイク話';
      }
    }
    function goCheckout(){
      document.getElementById('detail-page').classList.add('hidden');
      document.getElementById('checkout-page').classList.remove('hidden');
    }
    function completePurchase(){
      document.getElementById('checkout-page').classList.add('hidden');
      document.getElementById('complete-page').classList.remove('hidden');
    }
    function backToList(){
      document.getElementById('list-page').classList.remove('hidden');
      document.getElementById('detail-page').classList.add('hidden');
    }
    function backToDetail(){
      document.getElementById('checkout-page').classList.add('hidden');
      document.getElementById('detail-page').classList.remove('hidden');
    }
  </script>
